{
  "languageserver": {
     "haskell": {
         "command": "haskell-language-server-wrapper",
         "args": ["--lsp"],
         "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
         "filetypes": ["haskell", "lhaskell"]
     },
     "kotlin": {
         "command": "//usr/local/bin/kotlin-language-server/server/build/install/server/bin/kotlin-language-server",
         "filetypes": ["kotlin"]
     }
  }
}
